@model IEnumerable<AdvanceDTO>

<ul class="list-group-item">
    <li class="list-group-item  align-items-center">
        <span class="caption-subject font-dark bold "><i class="icon-credit-card"></i> Avans Talepleri </span>
    </li>
    @foreach (var item in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">

            <div class="row">

                <div class="col-md-4">@item.EmployeeFullName</div>
                <div class="col-md-4">@item.Sum</div>
                <div class="col-md-4">@item.Date.ToShortDateString()</div>
            </div>
        </li>
    }
</ul>
